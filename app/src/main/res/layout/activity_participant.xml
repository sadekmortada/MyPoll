<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParticipantActivity"
    android:background="@drawable/mypollbg">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/participant_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorWhite"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/participant_poll_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pollbg"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="3dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/participant_poll_title"
                android:layout_marginStart="20dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/participant_poll_date"
                android:textSize="16sp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_poll_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/participant_toolbar"
        android:textSize="22sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:width="350dp" />

    <TextView
        android:id="@+id/choices_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choices"
        android:textSize="22sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/participant_poll_details"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"/>
    <HorizontalScrollView
        android:id="@+id/choices_scroll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/choices_text"
        android:background="@drawable/blueframe"
        android:padding="15dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/submit_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg"
        android:text="Submit"
        android:onClick="submit"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@+id/choices_scroll"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You've successfully voted!\nPlease wait until poll is closed"
        android:textSize="22sp"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/submit_vote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0"
        android:textColor="@color/colorPrimaryDark"/>
</androidx.constraintlayout.widget.ConstraintLayout>